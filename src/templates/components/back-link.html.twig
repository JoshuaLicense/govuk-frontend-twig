{% macro govukBackLink(params) %}
<a href="{%- if params.href | default(false) %}{{ params.href }}{% else %}#{% endif -%}" class="govuk-back-link{%- if params.classes | default(false) %} {{ params.classes }}{% endif -%}"
{%- for attribute, value in params.attributes ?? [] %} {{attribute}}="{{value is same as(true) or value is same as(false) ? (value ? 'true' : 'false') : value }}"{% endfor %}>{{ (params.html | default(false) ? params.html | raw : (params.text | default(false) ? params.text : 'Back')) -}}
</a>
{% endmacro %}
