{% macro govukLabel(params) %}
{% if params.html is defined or params.text is defined %}
{% set labelHtml %}
<label class="govuk-label{%- if params.classes is defined %} {{ params.classes }}{% endif %}"
  {%- for attribute, value in params.attributes ?? [] %} {{attribute}}="{{value}}"{% endfor %}
  {%- if params.for is defined %} for="{{ params.for }}"{% endif %}>
  {{ params.html is defined ? params.html | raw : params.text }}
</label>
{% endset %}

{% if params.isPageHeading is defined %}
<h1 class="govuk-label-wrapper">{{ labelHtml | raw }}</h1>
{% else %}
{{ labelHtml | raw }}
{% endif %}
{% endif %}
{% endmacro %}
