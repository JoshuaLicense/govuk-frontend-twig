{% macro govukTag(params) %}
{%- from "@govuk-frontend-twig/macros/attributes.twig" import govukAttributes -%}

<strong class="govuk-tag{% if params.classes | default(false) %} {{ params.classes }}{% endif %}"
  {{- govukAttributes(params.attributes ?? []) }}>
  {{ params.html | default(false) ? params.html | raw : params.text }}
</strong>
{% endmacro %}
