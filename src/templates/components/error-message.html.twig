{% macro govukErrorMessage(params) %}
{% set visuallyHiddenText = params.visuallyHiddenText is defined and params.visuallyHiddenText is not null ? params.visuallyHiddenText : "Error" -%}

<p {%- if params.id | default(false) %} id="{{ params.id }}"{% endif %} class="govuk-error-message{%- if params.classes | default(false) %} {{ params.classes }}{% endif %}" {%- for attribute, value in params.attributes ?? [] %} {{ attribute }}="{{ value }}"{% endfor -%}>
  {% if visuallyHiddenText | default(false) %}<span class="govuk-visually-hidden">{{ visuallyHiddenText }}:</span> {% endif -%}
  {{ params.html | default(false) ? params.html | raw : params.text }}
</p>
{% endmacro %}
