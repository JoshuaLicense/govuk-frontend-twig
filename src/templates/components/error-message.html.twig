{% macro govukErrorMessage(params) %}
{% set visuallyHiddenText = params.visuallyHiddenText is defined ? params.visuallyHiddenText : "Error" -%}

<p {%- if params.id is defined and params.id is not null %} id="{{ params.id }}"{% endif %} class="govuk-error-message{%- if params.classes is defined and params.classes is not null %} {{ params.classes }}{% endif %}" {%- for attribute, value in params.attributes ?? [] %} {{ attribute }}="{{ value }}"{% endfor -%}>
  {% if visuallyHiddenText %}<span class="govuk-visually-hidden">{{ visuallyHiddenText }}:</span> {% endif -%}
  {{ params.html is defined and params.html is not null ? params.html | raw : params.text }}
</p>
{% endmacro %}
