{% macro govukPhaseBanner(params) %}
{% from "@govuk-frontend-twig/components/tag.html.twig" import govukTag -%}

<div class="govuk-phase-banner
  {%- if params.classes | default(false) %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes ?? [] %} {{ attribute }}="{{ value }}"{% endfor %}>
  <p class="govuk-phase-banner__content">
    {{ govukTag({
      text: params.tag.text | default(null),
      html: params.tag.html | default(null),
      classes: "govuk-phase-banner__content__tag#{params.tag.classes | default(false) ? ' ' ~ params.tag.classes : ''}"
    }) | trim | raw }}
    <span class="govuk-phase-banner__text">
      {{ params.html | default(false) ? params.html | raw : params.text }}
    </span>
  </p>
</div>
{% endmacro %}
