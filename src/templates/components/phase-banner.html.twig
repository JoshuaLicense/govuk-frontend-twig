{% macro govukPhaseBanner(params) %}
{% from "@govuk-frontend-twig/components/tag.html.twig" import govukTag -%}
{% from "@govuk-frontend-twig/macros/attributes.twig" import govukAttributes -%}

<div class="govuk-phase-banner
  {%- if params.classes | default(false) %} {{ params.classes }}{% endif %}"
  {{- govukAttributes(params.attributes ?? []) }}>
  <p class="govuk-phase-banner__content">
    {{ govukTag({
      text: params.tag.text | default(null),
      html: params.tag.html | default(null),
      classes: "govuk-phase-banner__content__tag#{params.tag.classes | default(false) ? ' ' ~ params.tag.classes : ''}"
    }) | trim | raw }}
    <span class="govuk-phase-banner__text">
      {{ params.html | default(false) ? params.html | trim | raw : params.text }}
    </span>
  </p>
</div>
{% endmacro %}
